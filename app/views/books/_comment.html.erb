<table class="table">
  <% @book.book_comments.each do |book_comment| %>
    <% book_comment_user = book_comment.user %>
    <tr>
    	<td>
    		<%= link_to user_path(book_comment_user), class: "user_#{book_comment_user.id}" do %>
      		<%= image_tag book_comment_user.get_profile_image, class:"profile-image-sm  rounded-circle"%><br>
      		<%= book_comment_user.name %>
    		<% end %>
    	</td>
    	<td><%= simple_format(book_comment.comment) %></td>
    	<% if current_user == book_comment_user %>
      	<td>
			<%= link_to book_book_comment_path(book_comment.book_id, book_comment.id), method: :delete do %>
				<i class="fas fa-trash-alt"></i>
			<% end %>
		</td>
    	<% end %>
    </tr>
  <% end %>
</table>
