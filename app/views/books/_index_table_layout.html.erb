<table class='table table-hover table-inverse'>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td>
          <%= link_to book_path(book), class: "book_#{book.id}" do %>
            <%= image_tag book.get_book_image, class: "book-image-lg" %>
          <% end %>
        </td>
        <td>
          <div class="text-right">
            <%= link_to user_path(book.user) do %>
              <%= image_tag book.user.get_profile_image, class: "profile-image-sm rounded-circle" %>
            <% end %>
            <small class="text-muted"><%= book.created_at.strftime("%Y/%m/%d %X") %></small>
          </div>
          </div>
          <h5><%= book.title%></h5>
          <p><%= book.body %><p>
          <div class="text-right">
            <%= render "favorites/favorite-btn", book: book %>
            <i class="fas fa-comment"></i><%= book.book_comments.count %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
