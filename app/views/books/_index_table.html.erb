<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Opinion</th>
      <th>favorite</th>
      <th>comment</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td>
          <%= link_to user_path(book.user) do %>
            <%= image_tag book.user.get_profile_image, class: "profile-image-sm rounded-circle" %>
          <% end %>
        </td>
        <td>
          <%= link_to book_path(book), class: "book_#{book.id}" do %>
            <%= image_tag book.get_book_image, class: "book-image-sm" %>
            <%= book.title.truncate(12)%>
          <% end %>
        </td>
        <td>
          <%= book.body.truncate(12) %>
        </td>
        <td>
          <%= render "favorites/favorite-btn", book: book %>
        </td>
        <td>
          <i class="fas fa-comment"></i><%= book.book_comments.count %>
        </td>
        <td>
          <%= book.created_at.strftime("%Y/%m/%d") %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
