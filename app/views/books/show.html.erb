<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: Book.new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
  		    <td>
            <%= link_to book_path(@book.id) do %>
            <%= image_tag @book.get_book_image, class: "book-image-md" %><br>
            <%= @book.title %>
            <% end %>
          </td>
          <td><%= simple_format(@book.body) %></td>
          <td class="favorite-btn"><%= render "favorites/favorite-btn", book: @book %></td>
          <td><i class="fas fa-comment"></i><%= @book.book_comments.count %></td>
          <% if @book.user == current_user %>
            <td>
              <%= link_to edit_book_path(@book) do %>
                <i class="fas fa-edit"></i>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book), method: :delete, data: { confirm: '本当に消しますか？' } do %>
                <i class="fas fa-trash-alt"></i>
              <% end %>
            </td>
          <% end %>
        </tr>
      </table>
      <%= render 'books/comment', book: @book,book_comment: @book_comment%>
    </div>
  </div>
</div>